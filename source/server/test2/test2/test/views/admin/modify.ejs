<script>
    $("#btn_submit").click(function() {

        var username =  $("#admin_name").val();
        var oldpwd=$("#old_password").val();
        var newpwd= $("#new_password1").val();
        var repwd=$("#new_password2").val();

        if(oldpwd == "" || repwd == "" || newpwd == ""){
            alert("请输入必填项！");
        }
        // 检查输入是否合理
        else if(newpwd != repwd){
            alert("输入密码不一致！");
        }

        $.post(
                'modify',
                {'username' : username,
                 'old_pwd' : oldpwd,
                 'new_pwd' : newpwd},
                function (data){
                    alert(data);
                    window.location.reload(); // 刷新页面
                }
        );
    });

</script>
