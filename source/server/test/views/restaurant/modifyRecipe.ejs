            <ul class="breadcrumb">
                <li>
                    <a href="#">菜谱管理</a>
                </li>
                <li class="active">菜谱修改</li>
            </ul>
        </div>
        <!-- page heading end-->

        <!--body wrapper start-->
        <section class="wrapper">
            <!-- page start-->

            <div class="row">
                <div class="col-lg-6">
                    <section class="panel">
                        <header class="panel-heading">
                            基本信息
                        </header>
                        <div class="panel-body">
                            <!--<form role="form">-->
                                <div class="form-group">
                                    <label for="name">菜品名称</label>
                                    <input type="email" class="form-control" id="name" placeholder="<%= rows[0].name %>">
                                </div>
                                <div class="form-group">
                                    <label for="name">菜品简介</label>
                                    <textarea rows="5" cols="60" class="form-control" id="introduction"><%= rows[0].introduction %></textarea>
                                </div>
                            <!--</form>-->
                        </div>
                    </section>
                </div>
                <div class="col-lg-6">
                    <section class="panel">
                        <header class="panel-heading">
                            菜品原料
                        </header>
                        <div class="panel-body">
                            <!--<form role="form">-->
                                <div class="form-group">
                                    <label for="name">菜品主料</label>
                                    <textarea rows="1" cols="60" class="form-control" id="major"><%= rows[0].major_material %></textarea>
                                </div>
                                <div class="form-group">
                                    <label for="name">菜品辅料</label>
                                    <textarea rows="5" cols="60" class="form-control" id="minor"><%= rows[0].minor_material %></textarea>
                                </div>
                            <!--</form>-->
                        </div>
                    </section>
                </div>
                <div class="col-lg-6">
                    <section class="panel">
                        <header class="panel-heading">
                            烹饪过程
                        </header>
                        <div class="panel-body">
                            <!--<form role="form">-->
                                <div class="form-group">
                                    <label for="name">菜品工艺</label>
                                    <input type="text" class="form-control" id="method" value="<%= rows[0].method %>">
                                    <!--<textarea rows="1" cols="60" class="form-control" id="method"><%= rows[0].method %></textarea>-->
                                </div>
                                <div class="form-group">
                                    <label for="name">烹饪时间</label>
                                    <input type="text" class="form-control" id="time" value="<%= rows[0].time %>">
                                    <!--<textarea rows="1" cols="60" class="form-control" id="time"><%= rows[0].time %></textarea>-->
                                </div>
                                <div class="form-group">
                                    <label for="name">烹饪流程</label>
                                    <textarea rows="5" cols="60" class="form-control" id="procedure"><%= rows[0].process %></textarea>
                                </div>
                                <div class="form-group">
                                    <label for="name">小贴士</label>
                                    <textarea rows="5" cols="60" class="form-control" id="tips"><%= rows[0].tips %></textarea>
                                </div>
                            <!--</form>-->
                        </div>
                    </section>
                </div>
                <div class="col-lg-6">
                    <section class="panel">
                        <header class="panel-heading">
                            具体信息
                        </header>
                        <div class="panel-body">
                            <!--<form role="form">-->
                                <div class="form-group">
                                    <label for="name">菜品口味</label>
                                    <input type="text" class="form-control" id="flavour" value="<%= rows[0].flavour %>">
                                    <!--<textarea rows="1" cols="60" class="form-control" id="flavour"><%= rows[0].flavour %></textarea>-->
                                </div>
                                <div class="form-group">
                                    <label for="name">忌口</label>
                                    <input type="text" class="form-control" id="avoid" value="<%= rows[0].avoid %>">
                                    <!--<textarea rows="1" cols="60" class="form-control" id="avoid"><%= rows[0].avoid %></textarea>-->
                                </div>
                                <div class="form-group">
                                    <label for="name">菜品价格</label>
                                    <!--<textarea rows="1" cols="60" class="form-control" id="avoid"><%= rows[0].price %></textarea>-->
                                    <input type="text" class="form-control" id="price" value="<%= rows[0].price %>">
                                </div>
                                <div class="form-group">
                                    <label for="name">是否推荐</label>
                                    <% if(rows[0].isRecommend == 1){ %>
                                        <input type="checkbox" value="" id="commendation" checked="checked">推荐此菜品
                                    <% }else{ %>
                                        <input type="checkbox" value="" id="commendation">推荐此菜品
                                    <% } %>
                                </div>
                            <!--</form>-->
                        </div>
                    </section>
                </div>
            </div>
            <!-- page end-->

            <div class="form-group">
                <label class="col-md-2 col-sm-2 control-label">上传图片</label>
                <div class="col-md-6 col-sm-6">
                    <div class="form-group last">
                        <div class="col-md-9">
                            <div class="fileupload fileupload-new" data-provides="fileupload">
                                <div class="fileupload-new thumbnail" style="width: 200px; height: 150px;">
                                    <img src="http://www.placehold.it/200x150/EFEFEF/AAAAAA&amp;text=no+image" alt="" />
                                </div>
                                <div class="fileupload-preview fileupload-exists thumbnail" style="max-width: 200px; max-height: 150px; line-height: 20px;"></div>
                                <div>
								   <span class="btn btn-default btn-file">
								   <span class="fileupload-new"><i class="fa fa-paper-clip"></i>选择图片</span>
