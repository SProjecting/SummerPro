<!--common scripts for all pages-->
<script src="js/js_business/scripts.js"></script>

<script>

    function submit(id){

        var introduction = $("#introduction").val();
        var major = $("#major").val();
        var minor = $("#minor").val();
        var email = $("#email").val();
        var method = $("#method").val();
        var time= $("#time").val();
        var procedure = $("#procedure").val();
        var tips = $("#tips").val();
        var flavour = $("#flavour").val();
        var avoid = $("#avoid").val();
        var price = $("#price").val();

        var isRecommended;
        if ($("#commendation").is(":checked"))
            isRecommended = 1;
        else
            isRecommended = 0;

        $.post(
                'modifyRecipe',
                {
                    'id' : id,
                    'introduction' : introduction,
                    'major' : major,
                    'minor' : minor,
                    'email' : email,
                    'method' : method,
                    'time' : time,
                    'procedure' : procedure,
                    'tips' : tips,
                    'flavour' : flavour,
                    'avoid' : avoid,
                    'price' : price,
                    'isRecommended' : isRecommended
                },
                function(data){
                    alert(data);
                }
        );
    }



</script>

