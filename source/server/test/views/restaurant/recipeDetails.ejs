<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0">
    <meta name="description" content="">
    <meta name="author" content="">
    <link rel="shortcut icon" href="#" type="image/png">

    <title>菜品详情</title>

    <link href="css/style-business.css" rel="stylesheet">
    <link href="css/style-responsive.css" rel="stylesheet">

    <!-- HTML5 shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!--[if lt IE 9]>
    <script src="js/html5shiv.js"></script>
    <script src="js/respond.min.js"></script>
    <![endif]-->
</head>

<body class="sticky-header">

<section>
    <!-- left side start-->
    <div class="left-side sticky-left-side">

        <!--logo and iconic logo start-->
        <div class="logo">
            <a href="business_index.html"><img src="images/business/logo.png" alt=""></a>
        </div>
        <!--logo and iconic logo end-->

        <div class="left-side-inner">
            <!--sidebar nav start-->
            <ul class="nav nav-pills nav-stacked custom-nav">
                <li class="active"><a href="business_index.html"><i class="fa fa-home"></i> <span>主页</span></a></li>
                <li class="menu-list"><a href=""><i class="fa fa-laptop"></i> <span>商家信息</span></a>
                    <ul class="sub-menu-list">
                        <li><a href="business_details.html">查看详情</a></li>
                        <li><a href="business_modify.html">管理信息</a></li>
                    </ul>
                </li>
                <li class="menu-list"><a href=""><i class="fa fa-book"></i> <span>菜谱信息</span></a>
                    <ul class="sub-menu-list">
                        <li><a href="business_recipedisplay.html">菜品展示</a></li>
                        <li><a href="business_recipelist.html">菜谱列表</a></li>
                        <li><a href="business_recipeupload.html">上传菜品</a></li>
                    </ul>
                </li>
                <li class="active"><a href="business_comment.html"><i class="fa fa-list"></i> <span>评论</span></a></li>
                <li><a href="user_login.html"><i class="fa fa-unlock"></i> <span>Sign Out</span></a></li>
            </ul>
            <!--sidebar nav end-->
        </div>
    </div>
    <!-- left side end-->

    <!-- main content start-->
    <div class="main-content" >

        <!-- header section start-->
        <div class="header-section">

            <!--toggle button start-->
            <a class="toggle-btn"><i class="fa fa-bars"></i></a>
            <!--toggle button end-->

            <!--search start-->
            <form class="searchform" action="business_index.html" method="post">
                <input type="text" class="form-control" name="keyword" placeholder="Search here..." />
            </form>
            <!--search end-->

            <!--notification menu start -->
            <div class="menu-right">
                <ul class="notification-menu">
                    <li>
                        <a href="#" class="btn btn-default dropdown-toggle" data-toggle="dropdown">
                            <img src="images/clients/avatar-5.jpg" alt="" />
                            迹部景吾
                            <span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu dropdown-menu-usermenu pull-right">
                            <li><a href="business_details.html"><i class="fa fa-user"></i>查看个人信息</a></li>
                            <li><a href="business_modify.html"><i class="fa fa-cog"></i>个人信息管理</a></li>
                            <li><a href="user_login.html"><i class="fa fa-sign-out"></i>Sign Out</a></li>
                        </ul>
                    </li>

                </ul>
            </div>
            <!--notification menu end -->

        </div>
        <!-- header section end-->
        <!-- header section end-->

        <!-- page heading start-->
        <div class="page-heading">
            <h3>
                菜品详情
            </h3>
            <ul class="breadcrumb">
                <li>
                    <a href="#">菜品详情</a>
                </li>
                <li class="active"><%= rows[0].name %></li>
            </ul>
        </div>
        <!-- page heading end-->

        <!--body wrapper start-->
        <div class="wrapper">

            <div class="row">
                <div class="col-md-4">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="panel">
                                <div class="panel-body">
                                    <div class="profile-pic text-center">
                                        <img alt="" src="images/tangculiji.jpg">
                                        <div class="title"><%= rows[0].name %></div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="panel">
                                <div class="panel-body p-states">
                                    <div class="summary pull-left">
                                        <h4><span>菜品价格</span></h4>
                                        <span>Recipe Price</span>
                                        <h3><%= rows[0].price %></h3>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="panel">
                                <div class="panel-body p-states green-box">
                                    <div class="summary pull-left">
                                        <h4>菜品简介</h4>
                                        <span><%= rows[0].introduction %></span>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="panel">
                                <div class="panel-body">
                                    <h3>
                                        菜品信息
                                    </h3>
                                    <ul class="p-info">
                                        <li>
                                            <div class="title">菜品名称</div>
                                            <div class="desk"><%= rows[0].name %></div>
                                        </li>
                                        <li>
                                            <div class="title">菜品口味</div>
                                            <div class="desk"><%= rows[0].flavour %></div>
                                        </li>
                                        <li>
                                            <div class="title">菜品忌口</div>
                                            <div class="desk"><%= rows[0].avoid %></div>
                                        </li>
                                        <li>
                                            <% var recommend; %>
                                            <% if(rows[0].isRecommend == 1)
                                                recommend = '是';
                                            else
                                                recommend = '否';  %>

                                            <div class="title">推荐菜</div>
                                            <div class="desk"><%= recommend %></div>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="panel">
                                <div class="panel-body">
                                    <h3>
                                        原料及工艺
                                    </h3>
                                    <ul class="p-info">
                                        <li>
                                            <div class="title">菜品主料</div>
                                            <div class="desk"><%= rows[0].major_material %></div>
                                        </li>
                                        <li>
                                            <div class="title">菜品辅料</div>
                                            <div class="desk"><%= rows[0].minor_material %></div>
                                        </li>
                                        <li>
                                            <div class="title">菜品工艺</div>
                                            <div class="desk"><%= rows[0].method %></div>
                                        </li>
                                        <li>
                                            <div class="title">烹饪时间</div>
                                            <div class="desk"><%= rows[0].time %></div>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-8">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="panel">
                                <div class="panel-body">
                                    <div class="profile-desk">
                                        <h3>烹饪流程</h3>
                                        <span class="designation">COOK PROCEDURE</span>
                                        <p><%= rows[0].process %></p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="panel">
                                <div class="panel-body p-states">
                                    <div class="summary pull-left">
                                        <h4>烹饪小贴士</h4>
                                        <span><%= rows[0].tips %></span>
                                        <h3>COME ON</h3>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="panel">
                                <header class="panel-heading">
                                    成果展示
                                    <span class="tools pull-right">
                                        <a class="fa fa-chevron-down" href="javascript:;"></a>
                                        <a class="fa fa-times" href="javascript:;"></a>
                                     </span>
                                </header>
                                <div class="panel-body">
                                    <ul class="activity-list">
                                        <li>
                                            <div class="activity-desk">
                                                <div class="album">
                                                    <a href="#">
                                                        <img alt="" src="images/tangculiji.jpg">
                                                    </a>
                                                    <a href="#">
                                                        <img alt="" src="images/tangculiji2.jpg">
                                                    </a>
                                                </div>
                                            </div>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>
        <!--body wrapper end-->

        <!--footer section start-->
        <footer class="">
            &copy; Summer Cooperation 2016
        </footer>
        <!--footer section end-->


    </div>
    <!-- main content end-->
</section>

<!-- Placed js at the end of the document so the pages load faster -->
<script src="js/jquery-1.10.2.min.js"></script>
<script src="js/js_business/jquery-ui-1.9.2.custom.min.js"></script>
<script src="js/js_business/jquery-migrate-1.2.1.min.js"></script>
<script src="js/bootstrap.min.js"></script>
<script src="js/js_business/modernizr.min.js"></script>
<script src="js/js_business/jquery.nicescroll.js"></script>

<!--Sparkline Chart-->
<script src="js/js_business/sparkline/jquery.sparkline.js"></script>
<script src="js/js_business/sparkline/sparkline-init.js"></script>

<!--google map-->
<script src="https://maps.googleapis.com/maps/api/js?v=3.exp&AMP;sensor=false"></script>


<!--common scripts for all pages-->
<script src="js/js_business/scripts.js"></script>

<script>

    //google map
    function initialize() {
        var myLatlng = new google.maps.LatLng(-37.815207, 144.963937);
        var mapOptions = {
            zoom: 15,
            scrollwheel: false,
            center: myLatlng,
            mapTypeId: google.maps.MapTypeId.ROADMAP
        }
        var map = new google.maps.Map(document.getElementById('map-canvas'), mapOptions);
        var marker = new google.maps.Marker({
            position: myLatlng,
            map: map,
            title: 'Hello World!'
        });
    }
    google.maps.event.addDomListener(window, 'load', initialize);

</script>

</body>
</html>
