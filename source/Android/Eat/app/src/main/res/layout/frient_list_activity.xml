<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/friend_drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            android:id="@+id/top"
            layout="@layout/friend_list_menu"
            android:layout_width="match_parent"
            android:layout_height="90dp" />

        <ListView
            android:id="@+id/friend_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <FrameLayout
            android:id="@+id/fly_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></FrameLayout>


    </LinearLayout>

    <fragment
        android:id="@+id/fg_left_menu"
        android:name="com.example.eat.LeftFragment"
        android:layout_width="800px"
        android:layout_height="1820px"
        android:layout_gravity="start"
        android:tag="LEFT"
        tools:layout="@layout/fg_left" />
</android.support.v4.widget.DrawerLayout>



