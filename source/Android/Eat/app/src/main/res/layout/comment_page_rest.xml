<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.example.eat.BackMenu
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></com.example.eat.BackMenu>

    <EditText
        android:id="@+id/edit_text_rest"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:hint="Type something here"
        android:maxLines="5" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/picture1"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center_horizontal"
            android:src="@mipmap/ic_launcher"/>

        <Button
            android:id="@+id/take_photo1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25dp"
            android:textColor="#fff"
            android:background="#49c7f1"
            android:layout_gravity="bottom"
            android:text="上传照片" />

        <Spinner
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:layout_gravity="bottom"
            android:id="@+id/reststar"
            ></Spinner>
    </LinearLayout>

    <Button
        android:id="@+id/finishMenu_rest"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="发表"
        android:textSize="25dp"
        android:background="#49c7f1"
        android:layout_marginTop="50dp"/>


</LinearLayout>




