<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="@drawable/beijing1">


    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp">

        <TableRow android:gravity="center">
            <TextView
                android:layout_height="70dp"
                android:layout_width="match_parent"
                android:text="姓名"
                android:textSize="25dp"
                android:gravity="center_vertical"/>
            <EditText
                android:layout_height="70dp"
                android:layout_width="150dp"
                android:hint="Username"
                android:textSize="25dp"
                android:id="@+id/register1_username"/>
        </TableRow>

        <TableRow android:gravity="center">
            <TextView
                android:layout_height="70dp"
                android:layout_width="match_parent"
                android:text="密码"
                android:textSize="25dp"
                android:gravity="center_vertical"/>
            <EditText
                android:layout_height="70dp"
                android:layout_width="150dp"
                android:hint="PassWord"
                android:textSize="25dp"
                android:id="@+id/register1_password"/>

        </TableRow>

        <TableRow android:gravity="center">
            <TextView
                android:layout_height="70dp"
                android:layout_width="match_parent"
                android:text="确认密码"
                android:textSize="25dp"
                android:gravity="center_vertical"
                />
            <EditText
                android:layout_height="70dp"
                android:layout_width="150dp"
                android:hint="PassWord"
                android:textSize="25dp"
                android:id="@+id/register1_rpassword"/>

        </TableRow>

        <TableRow android:gravity="center">
            <CheckBox
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:gravity="right"
                android:id="@+id/register1_ifsure"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:text="同意《安全保密条例》"
                android:textSize="20dp"
                android:gravity="center_vertical"
                />
        </TableRow>
    </TableLayout>

    <Button
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:id="@+id/register1_next"
        android:gravity="center"
        android:background="@drawable/shape"
        android:text="下一步"
        android:textSize="30dp"
        android:textColor="#eae8e8"/>
</LinearLayout>
